    "body-parser": "^1.15.1",
    "co": "^4.6.0",
    "cors": "^2.7.1",
    "express": "^4.13.4",
    "mongoose": "^4.4.15",
    "mongoose-simple-random": "^0.3.3",
    "per-env": "^1.0.1",
    "sentiment": "^1.0.6",
    "uniqid": "^3.0.0"
  },
  "devDependencies": {
    "mongo-express": "^0.30.54",
    "nodemon": "^1.9.2"
  }
