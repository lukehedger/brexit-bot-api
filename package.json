{
  "name": "brexit-bot-api",
  "version": "1.0.0",
  "description": "BrexitBot API",
  "main": "server.js",
  "engines": {
    "node": "~5.11.0"
  },
  "scripts": {
    "start": "per-env",
    "start:development": "npm-run nodemon server.js --watch shared/ --watch bot/ --watch human/",
